.sidebar
    position absolute
    width 200px
    height 100%
    right -200px
    top 0
    display flex
    flex-direction column
    justify-content space-between

    &-body
        height 100%

    &-group
        padding 0 20px
        margin 20px 0

        &:first-child
            margin-top 0

        &:last-child
            margin-bottom 0

        &-header
            font-size 13px
            text-transform uppercase
            margin-bottom 8px

    &-footer
        padding 0 20px

.search
    position relative

    &-icon
        transition transform .3s, opacity .3s
        opacity .6
        position absolute
        right 4px
        top 1px

        .search:hover &
            transform scale(1.2)

    &-input
        &:focus
            ~.search-icon
                opacity 1
                transform scale(1.2)

    &-input
        outline 0
        border 0
        border-bottom 1px solid #38393a
        padding 4px 0
        font-size 14px
        background transparent
        width 100%

        &::placeholder
            opacity .8
            font-size 14px
            transition opacity .3s

        &:focus
            &::placeholder
                opacity 0
