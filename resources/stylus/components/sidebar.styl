.sidebar
    position absolute
    right 0
    top 0
    width 200px
    display flex
    flex-direction column
    justify-content space-between
    flex 0 0 200px
    box-sizing border-box
    padding 20px 0
    margin 40px 0
    background #fff
    border-radius 4px

    &-fixed
        position fixed
        right 20px
        top 48px
        width auto
        flex 0 0 auto
        z-index 1000
        opacity .8
        transition width .3s

        &:hover
            opacity 1

    &-group
        padding 16px 0
        margin 0 20px
        border-bottom 1px solid rgba(153,153,153,0.2)

        &:first-child
            padding-top 0

        &:last-child
            padding-bottom 0
            border-bottom none

        &-header
            font-size 14px
            margin-bottom 8px

    &-footer
        padding 0 20px

.search
    position relative
    transition width .3s
    color color_gray_70

    .sidebar-fixed &
        width 20px

    .sidebar-fixed:hover &
        width 200px

    &-icon
        transition all .3s
        opacity .6
        position absolute
        right 6px
        top 5px
        width 20px
        height 20px

        .search:hover &
            opacity .8

    &-input
        outline 0
        border 0
        border 1px solid rgba(153,153,153,0.4)
        padding 0 10px
        padding-right 32px
        border-radius 2px
        line-height 32px
        height 32px
        font-size 13px
        box-sizing border-box
        background transparent
        width 100%
        transition all .3s
        
        .sidebar-fixed &
            transition all 0s
            opacity 0

        .sidebar-fixed:hover &
            transition all .3s .3s
            opacity 1

        &::placeholder
            opacity .8
            font-size 13px
            transition opacity .3s

        &:focus
            &::placeholder
                opacity 0
                
            ~.search-icon
                opacity 1
