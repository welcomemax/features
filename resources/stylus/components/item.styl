.item
    position relative
    display flex
    flex-direction column
    padding 20px
    box-sizing border-box
    border-radius 4px
    transition background .3s

    &-half
        width calc(50%)

    &-third
        width calc(33%)

    &-type-feature:after
        background #0079bf

    &-type-change:after
        background #61bd4f
        
    &-type-issue:after
        background #eb5a46

    &:after
        content ""
        position absolute
        bottom 0
        left 0
        height 3px
        width 100%
        transition background .3s

    &-open
        cursor pointer
        right 0
        top 0
        width 80px
        height 100%
        position absolute
        z-index 1
        color #38393a

        &:hover .icon
            transform translateX(2px)

        & .icon
            width 32px
            height 32px
            top 50%
            margin-top -16px
            right 20px
            position absolute
            transition transform .3s

    &-close
        cursor pointer
        right 20px
        top 20px
        position absolute
        z-index 1
        color #E91E63

        &:hover .icon
            transform translateY(-2px)

        & .icon
            width 32px
            height 32px
            transition transform .3s

    &-header
        &-info
            h2
            h3
            h4
                margin 0
                font-size 18px
            p
                margin 0
                font-size 14px
                color #868686

    &-body
        margin 12px 0
        position relative

    &-footer
        display flex
        align-items center
        justify-content space-between
        margin-top auto

        &-date
            font-size 13px
            color #868686
