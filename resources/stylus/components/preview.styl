.preview
    display flex
    flex-direction column
    position relative
    min-height 110px
    max-height 110px
    height 100vh
    width 100%
    background-image url('data:image/png;base64,')
    transition max-height .3s
    overflow hidden

    &.preview-active
        max-height 100vh

    &-button
        top 0
        right 0
        position absolute
        height 100%
        width 100%
        display flex
        align-items center
        justify-content center
        color #232526
        cursor pointer

        &:hover
            & .icon:before
                transform scale(1.2)

        .preview-active &
            margin-right 0
            top 20px
            right 20px
            height 40px
            width 40px

            & .icon
                width 20px
                height 20px

    &-iframe
        width 100%
        height 100%
        opacity 0
        transition opacity .6s
        border none

        .preview-loaded &
            opacity 1

    &-loader
        visibility hidden
        opacity 0

        .preview-active &
            visibility visible
            opacity 1

        .preview-loaded &
            visibility hidden
            opacity 0

    &-icon
        width 88px
        height 88px
        position absolute
        bottom -16px
        right -16px

        & *
            fill #fff !important
