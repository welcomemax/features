.control
    display block
    margin 12px 0
    width 100%
    min-height 26px

    &-inner
        min-height 26px

    &:first-child
        margin-top 0

    &:last-child
        margin-bottom 0

    &-label
        display block
        font-size 13px
        text-transform uppercase
        margin-bottom 4px

    &-input
    &-textarea
    &-value
        width 100%
        box-sizing border-box
        padding 8px 24px 8px 8px
        margin 0
        outline none
        border-radius 3px
        border 1px solid rgba(153, 153, 153, .4)
        line-height 1.2
        font-size 13px
        font-family -apple-system, BlinkMacSystemFont, Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

        &:focus
            border-color rgba(153, 153, 153, .6)

    &-textarea
        height 64px
        resize vertical

    &-value
        background #fafafa

    &-input
    &-value
        height 32px
        overflow hidden
        text-overflow ellipsis

    &-dropdown
        position relative
        max-width 370px

        &:after
            content ""
            position absolute
            width 0
            height 0
            top 50%
            right 8px
            margin-top -2px
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-top 4px solid currentColor
            transition border .3s

        &-options
            z-index 1
            position absolute
            width 100%
            height auto
            box-sizing border-box
            top 100%
            left 0
            margin-top 4px
            background #fff
            border-radius 3px
            overflow hidden
            box-shadow none
            max-height 0
            transition max-height .3s, box-shadow .3s
            overflow-y auto

            &::-webkit-scrollbar-track
                background-color #f0f0f0

            &::-webkit-scrollbar
                width 6px

            &::-webkit-scrollbar-thumb
                background-color #888

            .control-dropdown:hover &
                max-height 232px
                box-shadow 0 0 0 1px #ececec

            &-item
                position relative
                font-size 13px
                cursor pointer
                padding 4px 24px 4px 8px
                transition background-color .3s

                &-selected
                    &:after
                        content ""
                        position absolute
                        right 6px
                        top 8px
                        width 8px
                        height 4px
                        opacity .8
                        border-bottom 1px solid currentColor
                        border-left 1px solid currentColor
                        transform rotate(-45deg)

                &:hover
                    background rgba(0,0,0,.02)

                &:first-child
                    margin-top 0

                &:last-child
                    margin-bottom 0

    &-clipboard
        text-decoration none
        border none
        outline none
        border-radius 2px
        font-size 11px
        font-weight bold
        text-transform uppercase
        color #38393a
        background #ffffff
        padding 2px 6px
        position absolute
        right 16px
        top 12px
        cursor pointer
        z-index 1
        opacity .4
        transition opacity .3s, transform .3s

        .control:hover &
            opacity .7

        &:hover
            opacity 1 !important