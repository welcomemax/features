.control
    display block
    margin 12px 0
    width 100%
    min-height 26px

    &-inner
        min-height 26px

    &:first-child
        margin-top 0

    &:last-child
        margin-bottom 0

    &-label
        display block
        font-size 13px
        text-transform uppercase
        margin-bottom 4px

    &-input
    &-textarea
        width 100%
        box-sizing border-box
        padding 4px 24px 4px 8px
        margin 0
        outline none
        border-radius 3px
        border 1px solid rgba(153, 153, 153, .4)
        line-height 1
        font-size 13px
        font-family -apple-system, BlinkMacSystemFont, Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

        &:focus
            border-color rgba(153, 153, 153, .6)

    &-textarea
        height 52px

    &-input
        overflow hidden
        text-overflow ellipsis

    &-dropdown
        position relative

        &:after
            content ""
            position absolute
            width 0
            height 0
            top 50%
            right 8px
            margin-top -2px
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-top 4px solid currentColor
            transition border .3s

        &-options
            z-index 1
            position absolute
            width 100%
            height auto
            box-sizing border-box
            top 100%
            margin-top 4px
            left 0
            background #fff
            border-radius 3px
            overflow hidden
            box-shadow none
            max-height 0
            transition max-height .3s, box-shadow .3s

            .control-dropdown:hover &
                max-height 1000px
                box-shadow 0 0 0 1px #ececec

            &-item
                font-size 13px
                cursor pointer
                padding 4px 24px 4px 8px
                transition background-color .3s

                &-selected
                    &:after
                        content ""
                        position absolute
                        right 6px
                        top 8px
                        width 8px
                        height 4px
                        opacity .8
                        border-bottom 1px solid currentColor
                        border-left 1px solid currentColor
                        transform rotate(-45deg)

                &:hover
                    background-color #ececec

                &:first-child
                    margin-top 0

                &:last-child
                    margin-bottom 0
