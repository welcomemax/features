.nav
    &-menu
        list-style none
        margin 0
        padding 0
        font-size 0

        &-item
            display inline-block
            position relative

            &-active
            &:hover
                background #fafafa

            &-link
                font-size 14px
                text-decoration none
                height 48px
                box-sizing border-box
                display block
                padding 0 16px
                color #212121
                display flex
                align-items center

            &-button ~ a
                padding-right 48px !important

            &-button
                position absolute
                right 14px
                top 12px
                box-sizing border-box
                height 24px
                width 24px
                border-radius 50%
                color #f93262
                text-align center
                z-index 1
                transition all .3s
                
                &:before
                &:after
                    content ""
                    position absolute
                    top 50%
                    left 50%
                    border-radius 50%
                    width 100%
                    height 100%
                    z-index -1
                    background #fff
                    transform translate(-50%, -50%)

                &:before
                    transition all .3s
                    
                &:after
                    width 50%
                    height 50%

                & .icon
                    width 100%
                    height 100%
                    
                &:hover:before
                    background #f9c8d4
                    transform translate(-50%, -50%) scale(1.1)