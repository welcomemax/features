.nav
    &-menu
        list-style none
        margin 0
        padding 0
        font-size 0

        &-item
            display inline-block
            position relative

            &-active
            &:hover
                background #fafafa

            &-link
                font-size 14px
                text-decoration none
                height 48px
                box-sizing border-box
                display block
                padding 0 16px
                color #212121
                display flex
                align-items center

            &-button ~ a
                padding-right 48px !important

            &-button
                position absolute
                right 12px
                top 12px
                padding 4px
                box-sizing border-box
                height 24px
                width 24px
                background #f93262
                border-radius 2px
                color #fff
                text-align center
                z-index 1
                transition all .3s

                & .icon
                    width 13px
                    height 13px
                    color #fff
                    top -3px
                    left -4px
                    transform rotate(45deg)
                    
                &:hover
                    background #fa4772
                    transform scale(1.05)