.nav
    &-menu
        list-style none
        margin 0
        padding 0
        font-size 0

        &-item
            display inline-block
            position relative

            &-active
            &:hover
                background #fafafa

            &-active:after
                content ""
                position relative
                height 2px
                width 100%
                display block

            &-link
                font-size 13px
                text-decoration none
                height 48px
                box-sizing border-box
                display block
                padding 16px 16px
                color #212121

            &-button ~ a
                padding-right 48px !important

            &-button
                position absolute
                right 12px
                top 12px
                padding 4px
                box-sizing border-box
                height 24px
                width 24px
                background rgba(0,0,0,.05)
                border-radius 2px
                color #212121
                font-size 18px
                line-height 1
                text-align center
                text-decoration none
                z-index 1
                transition all .3s

                &:hover
                    background rgba(0,0,0,.08)
                    transform translateY(-1px)