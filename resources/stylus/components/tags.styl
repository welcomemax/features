.tags
    list-style none
    margin 0
    padding 0

    &-item
        display inline-block
        position relative
        margin-right 4px
        border-radius 2px
        font-size 11px
        background #38393a
        color #fff
        opacity .8
        transition opacity .3s

        &-active
        &:hover
            opacity 1

        &-icon
            transform rotate(-45deg)
            position absolute
            top 4px
            right 6px
            width 8px
            height 8px
            color #fff
            transition transform .3s

            .tags-item-active &
                transform rotate(0)

        &:last-child
            margin-right 0

        span
            padding 2px 6px
            display block

        a
            padding 2px 6px
            display block
            padding-right 18px
            cursor pointer
