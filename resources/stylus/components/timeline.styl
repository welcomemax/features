.timeline
    padding 0 80px 0 20px
    margin -24px 0

    &-horizontal
        padding 48px 0 24px 0
        margin 0 -20px
    
    &-bar
        width 2px
        height 100%
        background-image linear-gradient(180deg,#ffc63f,#fd3358)

        .timeline-horizontal &
            height 2px
            width 100% 
            background-image linear-gradient(90deg,#ffc63f,#fd3358)

    &-item
        position absolute
        top 50%
        left -107px
        margin-top -6px
        width 12px
        height 12px
        background #f93262
        border-radius 50%
        z-index 1

        &:after
            content ""
            position absolute
            left 12px
            top 5px
            width 96px
            height 2px
            opacity .5
            background #dedede

        &-date
            position absolute
            left 12px
            bottom -16px
            font-size 11px
            white-space nowrap
            opacity 0
            visibility hidden
            transition all .3s
            padding 2px 4px
            border-radius 2px
        
            .timeline-item:hover &
            .item:hover &
                opacity 1
                visibility visible
