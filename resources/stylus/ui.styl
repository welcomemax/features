color_gradient = linear-gradient(225deg, #ffc63f, #fd3358 49%, #bc35d8)

a
    color color_blue
    text-decoration none

input
    font-family -apple-system, BlinkMacSystemFont, Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

.hidden
    visibility hidden
    opacity 0

.button
    text-decoration none
    display inline-block
    font-size 13px
    color color_white
    background #38393a
    padding 4px 16px
    border-radius 2px
    border 1px solid #38393a
    outline none
    cursor pointer
    transition transform .3s

    &:hover
        transform translateY(-1px)

.icon
    fill currentColor
    height 24px
    width 24px

.clipboard
    border-radius 2px
    font-size 11px
    font-weight bold
    text-decoration none
    text-transform uppercase
    color #38393a
    background #ffffff
    padding 2px 6px
    position absolute
    right 12px
    top 12px
    cursor pointer
    z-index 1
    opacity .4
    transition all .3s

    &:hover
        opacity 1 !important

    // & > span
    //     animation fadein 1s, fadeout 1s 8s
    //     animation-fill-mode forwards

.notifications
    position fixed
    bottom 0
    right 40px
    z-index 999999
    width 300px
    
    &-item
        font-size 14px
        position relative
        padding 12px 12px 12px 12px
        margin-bottom 20px
        background color_black
        color color_white
        border-radius 5px
        opacity 0
        animation fadein 1s, fadeout 1s 8s
        animation-fill-mode forwards

        // &:before
        //     content url('../img/icon-notification.svg')
        //     display block
        //     width 12px
        //     height 8px
        //     position absolute
        //     left 20px

.loader
    position absolute
    z-index 1
    left 0
    top 0
    right 0
    bottom 0
    margin auto
    width 64px
    height 64px
    color color_magenta
    visibility hidden
    opacity 0
    transition opacity .3s, visibility .3s
    animation loader-1 4.8s linear infinite
    
    &-visible
        visibility visible
        opacity 1

    &-small
        width 32px
        height 32px

    &-inner
    &-inner:after
        display block
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        width 100%
        height 100%
        box-sizing border-box
        border-radius 50%
        content ""

    &-inner
        clip rect(0, 64px, 64px, 32px)
        animation loader-2 1.2s linear infinite

        .loader-small &
            clip rect(0, 32px, 32px, 16px)

        &:after
            clip rect(0, 64px, 64px, 32px)
            border 3px solid currentColor
            animation loader-3 1.2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite

            .loader-small &
                clip rect(0, 32px, 32px, 16px)

@keyframes fadein
    from
        opacity 0
    to
        opacity 1

@keyframes fadeout
    from
        opacity 1
    to
        opacity 0

@keyframes loader-1
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

@keyframes loader-2
    0%
        transform rotate(0deg)
    100%
        transform rotate(220deg)

@keyframes loader-3
    0%
        transform rotate(-140deg)
    50%
        transform rotate(-160deg)
    100%
        transform rotate(140deg)