body
html
    height 100%

body
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #212121
    margin 0
    background #fafafa
    overflow hidden

.container
    display flex
    flex-direction column
    justify-content space-between
    position relative
    width 100%
    height 100%
    max-width 800px
    box-sizing border-box
    margin 0 auto
    background #fff
    box-shadow 0 0 1px 1px rgba(0,0,0,.05)

main
    height 100%
    display flex
    justify-content space-between
    position relative

.content
    width 100%
    height 100%
    display flex
    flex-direction column
    overflow-x visible
    overflow-y auto
    transition opacity .3s, visibility .3s

    &::-webkit-scrollbar-track
        background-color #f0f0f0

    &::-webkit-scrollbar
        width 6px

    &::-webkit-scrollbar-thumb
        background-color #888

.list
    height 100%
    padding 20px

    .item
        margin 20px 0
        background #fafafa
        width calc(50%)

        &:first-child
            margin-top 0
            
        &:last-child
            margin-bottom 0

            &:after
                background transparent

        &:after
            background #dedede

        &:hover
            background #f7f7f7

.detail
    height 100%

    .item
        min-height 100%

        &:after
            background #dedede

.header
    padding 20px

    h1&-title
        margin 0
        margin-bottom 8px
        font-size 20px

    p&-caption
        margin 0
        font-size 14px

.footer
    padding 12px 20px

    &-nav
        ul
            list-style none
            margin 0
            padding 0

            li
                display inline-block

                a
                    font-size 13px
                    text-decoration none
                    display block
                    color dodgerblue

                    &:hover
                        text-decoration underline

.hidden
    visibility hidden
    opacity 0
