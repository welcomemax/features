body
html
    height 100%

body
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #212121
    margin 0
    background #fafafa
    overflow hidden

main
    max-width 960px
    box-sizing border-box
    margin 0 auto
    margin-top 72px
    display flex
    justify-content space-between
    position relative

.content
    width 100%
    height 100%
    display flex
    flex-direction column
    overflow-x visible
    overflow-y auto
    transition opacity .3s, visibility .3s
    background #fff
    border-radius 4px
    box-shadow 0 0 1px 1px rgba(0,0,0,.05)

    &::-webkit-scrollbar-track
        background-color #f0f0f0

    &::-webkit-scrollbar
        width 6px

    &::-webkit-scrollbar-thumb
        background-color #888

.list
    height 100%
    padding 20px

    .item
        margin 20px 0
        background #fafafa
        width calc(50%)

        &:first-child
            margin-top 0
            
        &:last-child
            margin-bottom 0

            &:after
                background transparent

        &:after
            background #dedede

        &:hover
            background #f7f7f7

.detail
    height 100%

    .item
        min-height 100%

        &:after
            background #dedede

.header
    position absolute
    left 0
    top 0
    width 100%
    padding 12px 20px
    box-sizing border-box
    height 50px
    background #fff
    box-shadow 0 0 1px 1px rgba(0,0,0,.05)

    &-inner
        max-width 960px
        margin 0 auto
        display flex
        align-items center
        justify-content space-between

    h1&-title
        margin 0
        font-size 20px
    
    &-nav
        ul
            list-style none
            margin 0
            padding 0

            li
                display inline-block

                a
                    font-size 13px
                    text-decoration none
                    display block

                    &:hover
                        text-decoration underline


.footer
    padding 12px 20px
    display flex
    justify-content space-between

.hidden
    visibility hidden
    opacity 0
